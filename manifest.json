{
	// basic info --------------------------------------------------------------
	"name"				: "Backfeed Monitor",
	"version"			: "1.0",
	"description"		: "Still hard to describe, but we're working on it...",
	"manifest_version"	: 2,
	"icons"				: {
		"16": "assets/icon16.png",
		"32": "assets/icon32.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"background"		: {
		"page"			: "background/background.html"
	},
	// type --------------------------------------------------------------
	"browser_action"	: {
		"default_icon"	: "assets/icon128.png",
		"default_popup" : "popup/popup.html"
	},
	// page injection --------------------------------------------------------------	
	"content_scripts"	: [{
		"matches"			: [ "*://*.slack.com/*" ],
		"exclude_globs"		: [ 
			"*.jpg","*.jpeg","*.gif","*.png","*.bmp","*.webp",
			"*.css","*.swf","*.js","*.zip","*.rar","*.tar","*.tar.gz","*.tgz","*.tar.bz2","*.tbz2",
			"*.doc","*.docx","*.ppt","*.pptx","*.xls","*.xlsx","*.pdf","*.xml","*.txt",
			"*.mpg","*.mpeg","*.qt","*.mp4","*.m4v","*.m4a","*.mp3","*.ogv","*.ogm","*.ogg","*.oga","*.webm","*.wav",
			"*.","*." 
		],
		"css"				: ["contentScript/inject.css"],
		"js"				: [
			"contentScript/app/vendor/scripts/jquery.js",
			"contentScript/app/vendor/scripts/angular.js",
			"contentScript/composeConfig.js" ,
			"contentScript/contentScript.js"
		],
		"run_at" 			: "document_end"
	}],
	// imports & permissions --------------------------------------------------------------	
	"web_accessible_resources"  : [ 
		"contentScript/app/*"
	],	
	"permissions"				: [ 
		"tabs",
		"webRequest",
	    "http://*/*",
    	"https://*/*",
    	"notifications"
	]
}
